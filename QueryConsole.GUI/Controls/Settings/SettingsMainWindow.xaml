<Window x:Class="QueryConsole.Controls.Settings.SettingsMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Settings" MinHeight="400" MaxHeight="400" MinWidth="600"
        MaxWidth="600" Height="400" Width="600" Background="WhiteSmoke">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"></RowDefinition>
      <RowDefinition Height="260*"></RowDefinition>
      <RowDefinition Height="40"></RowDefinition>
    </Grid.RowDefinitions>
    <TabControl Grid.Row="1" Name="Menu" Background="WhiteSmoke" HorizontalContentAlignment="Stretch"
                VerticalContentAlignment="Stretch" />
    <Button Grid.Row="2" Name="btnSave" Content="Save" Width="80" VerticalAlignment="Top" HorizontalAlignment="Right"
            Margin="0,10,110,0"></Button>
    <Button Grid.Row="2" Name="btnCancel" Content="Cancel" Width="80" VerticalAlignment="Top"
            HorizontalAlignment="Right" Margin="0,10,10,0"></Button>
  </Grid>
</Window>